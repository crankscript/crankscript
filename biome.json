{
    "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "libs/cli/src/**/*",
            "libs/cli/scripts/**/*",
            "playdate-tests/src/**/*",
            "libs/types/types/**/*.d.ts",
            "examples/**/*.ts",
            "scripts/**/*.ts"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 80
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedImports": {
                    "level": "error",
                    "options": {}
                }
            },
            "suspicious": {
                "noTsIgnore": "off"
            },
            "style": {
                "useExportType": "off"
            }
        }
    },
    "javascript": {
        "jsxRuntime": "reactClassic",
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    }
}
