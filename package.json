        "lint-staged": "^16.1.6",
        "nodemon": "^3.1.9",
        "patch-package": "^8.0.0",
        "ts-jest": "^29.2.5",
        "ts-jest-resolver": "^2.0.1",
        "ts-node": "10.9.1",
        "tsc-alias": "^1.8.10",
        "typescript": "5.7.3",
        "verdaccio": "6.0.5"
    },
    "files": [
        "src/",
        "assets/"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx,json}": [
            "biome check --write"
