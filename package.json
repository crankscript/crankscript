        "publish-packages": "changeset publish"
    },
    "author": {
        "name": "Alberto Piu"
    },
    "private": true,
    "dependencies": {
        "@inkjs/ui": "^2.0.0",
        "@types/react": "^18.3.7",
        "cheerio": "^1.0.0",
        "chokidar": "^4.0.3",
        "clipanion": "^4.0.0-rc.4",
        "ink": "^5.0.1",
        "ink-spinner": "^5.0.0",
        "lua-types": "^2.13.1",
        "open": "^10.1.0",
        "react": "^18.3.1",
        "tiged": "^3.0.0-rc.0",
        "ts-morph": "^23.0.0",
        "tslib": "^2.3.0",
        "tstl": "^3.0.0",
        "tsx": "^4.19.1",
        "turndown": "^7.2.0",
