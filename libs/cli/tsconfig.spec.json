{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "module": "nodenext",
        "types": ["jest", "node"],
        "moduleResolution": "nodenext",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@/cli/*": ["src/*"]
        }
    },
    "include": [
        "jest.config.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "src/**/*.d.ts"
    ]
}
