{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/libs/cli/src",
        "declaration": true,
        "types": ["node"],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "allowSyntheticDefaultImports": true,
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "@/cli/*": ["src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": [
        "jest.config.ts",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/_tests/**/test-*"
    ]
}
