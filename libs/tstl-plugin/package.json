{
    "name": "@crankscript/tstl-library",
    "version": "0.0.1",
    "scripts": {
        "build": "tsc --project tsconfig.lib.json",
        "build-dev": "tsc --project tsconfig.lib.json",
        "test": "jest",
        "lint": "eslint src --ext .ts",
        "postbuild": "mkdir -p ../../dist/libs/cli/assets && cp -r ../../dist/libs/tstl-plugin/* ../../dist/libs/cli/assets/",
        "postbuild-dev": "cp -r ../../dist/libs/tstl-plugin/* ../../libs/cli/assets/",
        "dev:plugin": "pnpm run build-dev",
        "dev:plugin:watch": "nodemon --watch src --ext ts --exec \"pnpm dev:plugin\""
    },
    "dependencies": {
        "@swc/helpers": "~0.5.11",
        "typescript": "^5.6.2",
        "typescript-to-lua": "^1.27.0"
    },
    "type": "commonjs",
    "main": "./src/index.js",
    "typings": "./src/index.d.ts",
    "private": true
}
