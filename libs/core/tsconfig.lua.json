{
    "compilerOptions": {
        "module": "commonjs",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "./",
        "declarationDir": "./src",
        "declaration": true,
        "types": [
            "lua-types/5.4"
        ]
    },
    "include": ["src/**/*.ts"],
    "exclude": [],
    "tstl": {
        "luaTarget": "5.4",
        "buildMode": "library"
    }
}
